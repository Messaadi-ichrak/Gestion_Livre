{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1 class="panel-heading">Livre</h1>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date edition</th>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'exemplaires</th>
                <td>{{ livre.nbexemplaires }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nomEditeur }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td>{{ livre.categorie.designation }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>
                            {{ livre.auteurs.prenom }} {{ livre.auteurs.nom }}





                </td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <div class="row" >
            <div class="col col-lg-6">
                <a href="{{ path('livre_index') }}"><span class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp;Retour</span></a>&nbsp;

                <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp;Editer</span></a>
            </div>
            {{ include('livre/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
