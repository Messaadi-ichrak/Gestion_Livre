{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1 class="panel-heading"> Livres </h1></br></br>
    <div>
        <a href="{{ path('livre_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span></a>
    </div></br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Nombre de pages</th>
                <th>Date edition</th>
                <th>Nombre d'exemplaires</th>
                <th>Prix</th>
                <th>Isbn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, livre in livres %}
            <tr>
                <td>{{ i + 1 }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.nbpages }}</td>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
                <td>{{ livre.nbexemplaires }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.isbn }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id' : livre.id }) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a> &nbsp;
                    <a href="{{ path('livre_edit', {'id' : livre.id }) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                    <a href="{{ path('livre_supprimer', {'id' : livre.id }) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
