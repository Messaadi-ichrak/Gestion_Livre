{% block body %}
    <!--[if IE]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
    <![endif]-->

    <!--====== PRELOADER PART START ======-->

    <div class="preloader">
        <div class="loader">
            <div class="ytp-spinner">
                <div class="ytp-spinner-container">
                    <div class="ytp-spinner-rotator">
                        <div class="ytp-spinner-left">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                        <div class="ytp-spinner-right">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--====== PRELOADER PART ENDS ======-->

    <!--====== HEADER PART START ======-->

    <header class="header_area">
        <div id="header_navbar" class="header_navbar">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand" href="{{ path('home') }}">
                                <img id="logo" src="{{ asset('client/images/logo.png') }}" alt="Logo">
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a class="page-scroll" href="{{ path('home') }}">Accueil</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="{{ path('home') }}" >Livres</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#categories" aria-expanded="false">Categories</a>
                                        <ul  class="dropdown-menu dropdown-messages" >
                                            {% for categorie in categories %}
                                                <li>
                                                    <a href="{{ path('afficher_categorie', {'id' : categorie.id }) }}" class="header-btn btn-hover "> <strong>{{ categorie.designation }}</strong> </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#editeurs" aria-expanded="false">Editeurs</a>
                                        <ul  class="dropdown-menu dropdown-messages" >
                                            {% for editeur in editeurs %}
                                                <li>
                                                    <a href="{{ path('afficher_editeur', {'id' : editeur.id }) }}" class="header-btn btn-hover "> <strong>{{ editeur.nomEditeur }}</strong> </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Auteurs</a>
                                        <ul  class="dropdown-menu dropdown-messages" >
                                            {% for auteur in auteurs %}
                                                <li>
                                                    <a href="{{ path('afficher_auteur', {'id' : auteur.id }) }}" class="header-btn btn-hover"> <strong>{{ auteur.prenom }} {{ auteur.nom  }}</strong> </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="{{ path('home') }}">Contact</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="header-btn btn-hover" href="{{ path('home') }}">Commencer</a>
                                    </li>
                                </ul>
                            </div> <!-- navbar collapse -->
                        </nav> <!-- navbar -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- header navbar -->
    </header>

    <!--====== HEADER PART ENDS ======-->

    <!--====== HERO PART START ======-->
    <section id="home" class="hero-area bg_cover">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-5 offset-xl-7 col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    <div class="hero-content">
                        <h2 class="mb-30 wow fadeInUp" data-wow-delay=".2s">La première bibliothèque en ligne</h2>
                        <p class="wow fadeInUp" data-wow-delay=".4s">Si vous n'avez pas assez de temps pour visiter la bibliothèque et acheter votre livre préféré !!
                            Ma bibliothèque est là pour vous, vous trouverez tous les livres anciens et nouveaux du monde entier</p>
                        <div class="hero-btns">
                            <a href="#livres" class="main-btn wow fadeInUp" data-wow-delay=".6s"> Découvrir Plus</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-left">
            <img src="{{ asset('client/images/hero.jpg') }}" alt="">
            <img src="{{ asset('client/images/dot-shape.svg') }}" alt="" class="shape">
        </div>
    </section>
    <!--====== HERO PART END ======-->

<section id="categories" class="skill-area pt-170">
    <div class="container">
        <h1 class="panel-heading">Livre</h1>

        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date edition</th>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'exemplaires</th>
                <td>{{ livre.nbexemplaires }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nomEditeur }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ livre.categorie.designation }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>
                            {{ livre.auteurs.prenom }} {{ livre.auteurs.nom }}

                </td>
            </tr>
            </tbody>
        </table>

        <div class="container">
            <div class="row" >
                <div class="col col-lg-6">
                    <a href="{{ path('home') }}"><span class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp;Retour</span></a>&nbsp;
                    <a href="#"><span class="btn btn-success">Télecharger</span></a>
                </div>
            </div>

        </div>

</div>
</section>



