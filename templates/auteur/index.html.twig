{% extends 'base.html.twig' %}

{% block title %}  Auteur Index {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1 class="panel-heading">Auteurs </h1></br></br>
    <div>
        <a href="{{ path('auteur_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span></a>
    </div></br>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
    <tr>
        <th >#</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Biographie</th>
        <th>Action</th>
    </tr>

    </thead>
        <tbody>

        {%  for c,a in auteurs %}
        <tr>
            <td >{{ c + 1 }}</td>
            <td >{{ a.prenom }}</td>
            <td >{{ a.nom }}</td>
            <td >{{ a.biographie }}</td>
            <td>
                <a href="{{ path('auteur_show', {'id' : a.id }) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a> &nbsp;
                <a href="{{ path('auteur_edit', {'id' : a.id }) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                <a href="{{ path('auteur_supprimer', {'id' : a.id }) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
            </td>

        </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block javascripts %}
    <!-- DATA TABLE SCRIPTS -->
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}