{% extends 'base.html.twig' %}

{% block title %}Categorie Index{% endblock %}

{% block body %}
    <h1 class="panel-heading">Catégories </h1></br></br>
    <div>
        <a href="{{ path('categorie_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span></a>
    </div></br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, categorie in categories %}
            <tr>
                <td>{{ i +1 }}</td>
                <td>{{ categorie.designation }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id' : categorie.id }) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a> &nbsp;
                    <a href="{{ path('categorie_edit', {'id' : categorie.id }) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                    <a href="{{ path('categorie_supprimer', {'id' : categorie.id }) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
