{% extends 'base.html.twig' %}

{% block title %}Editeur index{% endblock %}

{% block body %}
    <h1 class="panel-heading">Editeurs </h1></br></br>
    <div>
        <a href="{{ path('editeur_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span></a>
    </div></br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>NomEditeur</th>
                <th>Pays</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, editeur in editeurs %}
            <tr>
                <td>{{ i +1  }}</td>
                <td>{{ editeur.nomEditeur }}</td>
                <td>{{ editeur.pays }}</td>
                <td>{{ editeur.adresse }}</td>
                <td>{{ editeur.telephone }}</td>
                <td>
                    <a href="{{ path('editeur_show', {'id' : editeur.id }) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a> &nbsp;
                    <a href="{{ path('editeur_edit', {'id' : editeur.id }) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                    <a href="{{ path('editeur_supprimer', {'id' : editeur.id }) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
